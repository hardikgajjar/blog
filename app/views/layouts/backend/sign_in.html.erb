<!DOCTYPE html>
<html>
  <head>
    <title>Kids</title>
    <!--[if lte IE 8]>
    <%= javascript_include_tag "html5","selectivizr","excanvas.min" %>
    <![endif]-->
    <%= stylesheet_link_tag "grid","reset","admin","all_css" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

  <header id="top">
    <div class="container_12 clearfix">
      <div id="logo" class="grid_5">
        <!-- replace with your website title or logo -->
        <a id="site-title" href="dashboard.html"><span>Kids</span>Campus Admin Panel</a>
        <a id="view-site" href="#">View Site</a>
      </div>
    </div>
  </header>

  <div id="login" class="box">
    <h2>Login</h2>
    <section>
      <% if(notice) %>
        <div id="flashMessage" class="message"><%= notice %></div>
      <% end %>
      <% if(alert) %>
        <div id="flashMessage" class="message err"><%= alert %></div>
      <% end %>

      <%= yield %>
    </section>

  </div>

</body>
</html>
