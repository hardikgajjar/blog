<h1>Products</h1>
<%= form_tag({:action => 'destroyall'}) do %>
<div class="topbuttons clearfix">
<%= submit_tag "Delete", :class => "button blue", :style => "float:right" %>
<%= link_to 'Add New', new_backend_product_path, :class => "button blue", :style => "float:right" %>
</div>
<table cellpadding="0" cellspacing="0" border="0" class="display" id="datatable" class="gtable">
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Page Title(Head)</th>
    <th>Content</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
  <tr class="odd gradeA">
    <td><%= check_box(:Product,product.id) %></td>
    <td><%= product.name %></td>
    <td><%= product.title %></td>
    <td><%= product.content %></td>
    <td>
    <%= link_to image_tag("icons/view.png"), product %>
    <%= link_to image_tag("icons/edit.png"), edit_product_path(product) %>
    <%= link_to image_tag("icons/cross.png"), product, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<% end %>

<script type="text/javascript">
jQuery(function($) {
	$('#datatable').dataTable({
		'bJQueryUI': true,
		'sPaginationType': 'full_numbers'
	});
});
</script>
